string NPC = "";
string Generic = DamageReceiver + MeleeTargetBody + DamageableBody + SyncSlotsReservable + SyncSlotsReserver + BloodPuddleGenerator + GameplayModifierProbe + PhysicsPartialRagdoll1 + PhysicsPartialRagdoll2 + SyncAction;
string GenericInfected = Generic + UVLightSusceptible;

export string DefaultEntityVariant = Generic;

sub EntityVariant(string preset = "", string variant = "")
{
    Preset(preset)
    {
        SetField("m_EntityVariant", variant);
    }
}

sub EntityVariants()
{
    use EntityVariant(preset = "NPC_Man", variant = NPC);
    
    use EntityVariant(preset = "Viral", variant = GenericInfected);
    use EntityVariant(preset = "Viral_Gas_Tank", variant = GenericInfected + BoneAttachment);
    use EntityVariant(preset = "Biter", variant = GenericInfected);
    use EntityVariant(preset = "Biter_Armored_KeyCard", variant = GenericInfected + Detectable);
    use EntityVariant(preset = "Infected_Peacekeeper", variant = GenericInfected + Detectable);
    use EntityVariant(preset = "Demolisher", variant = GenericInfected);
    use EntityVariant(preset = "Freak_Torch", variant = GenericInfected + BoneAttachment);
    use EntityVariant(preset = "Goon", variant = GenericInfected);
    use EntityVariant(preset = "Goon_Key_Card", variant = GenericInfected + Detectable);
    use EntityVariant(preset = "Spitter", variant = GenericInfected);
    use EntityVariant(preset = "Suicider", variant = GenericInfected);
    use EntityVariant(preset = "Screamer", variant = GenericInfected);
    use EntityVariant(preset = "Bolter", variant = GenericInfected);
    use EntityVariant(preset = "Volatile", variant = GenericInfected);
    use EntityVariant(preset = "Banshee", variant = GenericInfected);
    use EntityVariant(preset = "Corruptor", variant = GenericInfected);
    use EntityVariant(preset = "Charger", variant = GenericInfected);
}
