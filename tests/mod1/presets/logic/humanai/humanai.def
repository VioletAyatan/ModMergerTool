sub main()
{
    use declare_activation_distance_humanai_presets();
    use declare_ai_scenario_roles();
    // The bang (!) ensures that this preset group is applied before the "Character" as groups are applied in the alphabetical order
    PresetDef("!Difficulty")
    {
        Description("");
        use DifficultyFields();

        use BiterDifficultyPresets();
        use ViralDifficultyPresets();
        use InfectedSpecialDifficultyPresets();
        use HumanGenericDifficultyPresets();
        use BanditFoddersDifficultyPresets();
    }
    PresetDef("Character")
    {
        Description("");
        use CharacterFields();

        use NPCBasePresets();
        use GenericHumanPresets();
        use OpenWorldPresets();
        use BitersPresets();
        use ViralsPresets();
        use InfectedSpecialPresets();
        use DLCFTQuestsPresets();
        use DLCFTCombatPresets();
		use DLCFTQuestsCombatPresets();
        use DLCFTAIlifePresets();

        use DeveloperPresets();
    }
    PresetDef("DifficultyMode")
    {
        Description("");
        AddField("m_DifficultyMode", "Normal");
        Preset("Easy") { SetField("m_DifficultyMode", "Easy"); }
        Preset("Normal") { SetField("m_DifficultyMode", "Normal"); }
        Preset("Hard") { SetField("m_DifficultyMode", "Hard"); }
        Preset("Nightmare") { SetField("m_DifficultyMode", "Nightmare"); }
    }
    PresetDef("EntityVariant")
    {
        AddField("m_EntityVariant", DefaultEntityVariant);
        use EntityVariants();
    }
    PresetDef("Tier")
    {
        Description("");
        AddField("m_DifficultyTier", "Tier_1");
        Preset("Tier_1") { SetField("m_DifficultyTier", "Tier_1"); }
        Preset("Tier_2") { SetField("m_DifficultyTier", "Tier_2"); }
        Preset("Tier_3") { SetField("m_DifficultyTier", "Tier_3"); }
        Preset("Tier_4") { SetField("m_DifficultyTier", "Tier_4"); }
        Preset("Tier_5") { SetField("m_DifficultyTier", "Tier_5"); }
        Preset("Tier_6") { SetField("m_DifficultyTier", "Tier_6"); }
        Preset("Tier_7") { SetField("m_DifficultyTier", "Tier_7"); }
        Preset("Tier_8") { SetField("m_DifficultyTier", "Tier_8"); }
        Preset("Tier_9") { SetField("m_DifficultyTier", "Tier_9"); }
        Preset("Tier_10") { SetField("m_DifficultyTier", "Tier_10"); }
        Preset("Tier_11") { SetField("m_DifficultyTier", "Tier_11"); }
        Preset("Tier_12") { SetField("m_DifficultyTier", "Tier_12"); }
        Preset("Tier_13") { SetField("m_DifficultyTier", "Tier_13"); }
        Preset("Tier_14") { SetField("m_DifficultyTier", "Tier_14"); }
        Preset("Tier_15") { SetField("m_DifficultyTier", "Tier_15"); }
    }
}
